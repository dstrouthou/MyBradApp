<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jimmysapp.mybradapp.adminactivity"
    android:background="@drawable/backc1">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adminlistView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nametxt"
        android:layout_marginBottom="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Name"
        android:id="@+id/nametxt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Surname"
        android:id="@+id/surnametxt"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/nametxt"
        android:layout_toEndOf="@+id/nametxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="username"
        android:id="@+id/usernametxt"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/surnametxt"
        android:layout_toEndOf="@+id/surnametxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="password"
        android:id="@+id/passwordtxt"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/usernametxt"
        android:layout_toEndOf="@+id/usernametxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="email"
        android:id="@+id/emailtxt"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/passwordtxt"
        android:layout_toEndOf="@+id/passwordtxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="cemail"
        android:id="@+id/cemailtxt"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/emailtxt"
        android:layout_toEndOf="@+id/emailtxt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/passwordtxt"
        android:layout_toStartOf="@+id/passwordtxt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/passwordtxt"
        android:layout_toEndOf="@+id/passwordtxt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/cemailtxt"
        android:layout_toEndOf="@+id/cemailtxt"
        android:layout_marginLeft="76dp"
        android:layout_marginStart="76dp" />
</RelativeLayout>
