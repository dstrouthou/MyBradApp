<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jimmysapp.mybradapp.Mainform"
    android:background="@drawable/backc1">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Options Menu"
        android:id="@+id/txtOptions"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textColor="#ff98ff3f"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="UoB Guide"
        android:id="@+id/uobguidebtn"
        android:onClick="onClickUobguide"
        android:textSize="30dp"
        android:textColor="#ff98ff3f"
        android:background="@drawable/button"
        android:layout_below="@+id/txtOptions"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="73dp"
        android:textStyle="italic" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="About UoB"
        android:id="@+id/aboutuobbtn"
        android:onClick="onClickAboutUob"
        android:textSize="30dp"
        android:textColor="#ff98ff3f"
        android:background="@drawable/button"
        android:layout_below="@+id/uobguidebtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="67dp"
        android:textStyle="italic" />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="BLACKBOARD"
        android:id="@+id/bbbtn"
        android:onClick="onClickBlackboard"
        android:textSize="15dp"
        android:textColor="#ff98ff3f"
        android:background="@drawable/button"
        android:layout_alignTop="@+id/btntwitter"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="E:vision"
        android:id="@+id/evisionbtn"
        android:onClick="onClickEvision"
        android:textSize="15dp"
        android:textColor="#ff98ff3f"
        android:background="@drawable/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Facebook"
        android:id="@+id/btnfacebook"
        android:onClick="onClickFacebook"
        android:background="@drawable/button"
        android:textColor="#ff98ff3f"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="15dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Twitter"
        android:id="@+id/btntwitter"
        android:onClick="onClickTwitter"
        android:background="@drawable/button"
        android:textColor="#ff98ff3f"
        android:layout_below="@+id/aboutuobbtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:textSize="15dp" />

</RelativeLayout>
