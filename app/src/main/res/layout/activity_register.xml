<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jimmysapp.mybradapp.register"
    android:background="@drawable/backc1"
    android:onClick="onClickScreen">

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Register"
        android:id="@+id/btnRegister"
        android:onClick="registerOnClick"
        android:layout_marginBottom="45dp"
        style="@android:style/Widget.ActionBar"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#ff98ff3f"
        android:minWidth="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView34"
        android:layout_alignEnd="@+id/textView34"
        android:background="@drawable/button" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Clear"
        android:id="@+id/clearbtn"
        android:onClick="clearOnClick"
        style="@android:style/Widget.ActionBar"
        android:minWidth="150dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#ff98ff3f"
        android:layout_alignTop="@+id/btnRegister"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/button" />



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="REGISTER FORM"
        android:id="@+id/textView34"
        android:textSize="40dp"
        android:textColor="#ff98ff3f"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="PLEASE FILL ALL THE FIELDS"
        android:id="@+id/textView36"
        android:layout_below="@+id/textView34"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff98ff3f"
        android:textStyle="bold" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:hint="Name"
        android:ems="10"
        android:id="@+id/reg_name"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="#ffffffff"
        android:minHeight="40dp"
        android:layout_below="@+id/textView36"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:hint="Surname"
        android:ems="10"
        android:id="@+id/reg_sname"
        android:background="#ffffffff"
        android:minHeight="40dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/reg_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:hint="Username"
        android:ems="10"
        android:id="@+id/reg_uname"
        android:layout_below="@+id/reg_cemail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:background="#ffffffff"
        android:minHeight="40dp" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:hint = "Password"
        android:ems="10"
        android:id="@+id/reg_pass"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/reg_uname"
        android:layout_marginTop="5dp"
        android:password="true"
        android:enabled="true"
        android:editable="true"
        android:background="#ffffffff"
        android:minHeight="40dp" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/reg_email"
        android:layout_below="@+id/reg_sname"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffffff"
        android:minHeight="40dp"
        android:hint="Email" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/reg_cemail"
        android:layout_below="@+id/reg_email"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffffff"
        android:minHeight="40dp"
        android:hint="Confirm Email" />


</RelativeLayout>
